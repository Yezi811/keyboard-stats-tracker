{
  "name": "keyboard-stats-tracker",
  "version": "1.0.0",
  "description": "A cross-platform keyboard statistics tracker built with Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "npm run build && electron .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "verify-build": "node scripts/verify-build-config.js",
    "prepack": "node scripts/pre-build-check.js",
    "pack": "npm run build && electron-builder --dir",
    "predist": "node scripts/pre-build-check.js",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "package:win": "npm run build && electron-builder --win --x64"
  },
  "keywords": [
    "electron",
    "keyboard",
    "statistics",
    "tracker"
  ],
  "author": "Keyboard Stats Tracker Team",
  "license": "MIT",
  "build": {
    "appId": "com.keyboardstats.tracker",
    "productName": "Keyboard Stats Tracker",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/uiohook-napi/**/*"
    ],
    "extraResources": [
      {
        "from": "src/infrastructure/schema.sql",
        "to": "schema.sql"
      },
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/tray-icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Keyboard Stats Tracker",
      "installerIcon": "build/tray-icon.ico",
      "uninstallerIcon": "build/tray-icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Keyboard Stats Tracker",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.5.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "fast-check": "^3.15.0",
    "sqlite3": "^5.1.7",
    "uiohook-napi": "^1.5.4"
  }
}
